{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <a class="buttonForm buttonSmall" href="{{ path('index')}}">< return</a>
        {% if error %}
            <div>
                {{ error.messageKey }}
            </div>
        {% endif %}

        <div class="divform">
            <form action="{{ path('security_login') }}" method="post" class="form">
                <div>
                    <input type="text" placeholder="username" name="_username" value="{{ last_username }}">
                </div>
                <div>
                    <input type="password" placeholder="password" name="_password">
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button type="submit">Login</button>
                <p class="message">Not registered? <a href="{{ path('security_register') }}">Create an account</a></p>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function (){
            $('#pathLogin').addClass('active');
        })
    </script>
{% endblock %}