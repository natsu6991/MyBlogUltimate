{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <h1 class="middle">Register</h1>
        <a class="buttonForm buttonSmall" href="{{ path('index')}}">< return</a>
        <div class="divform">
            {{ form_start(form, {'attr':{'class':'form'}}) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.username) }}
                <div class="select">
                    {{ form_row(form.gender) }}
                    <div class="select__arrow"></div>
                </div>
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
            <button type="submit">Sign up</button>
            <p class="message">Already registered? <a href="{{ path('security_login') }}">Sign In</a></p>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock body %}

{% block javascripts %}
    <script>
        $(document).ready(function (){
            $('#pathRegister').addClass('active');
        })
    </script>
{% endblock %}